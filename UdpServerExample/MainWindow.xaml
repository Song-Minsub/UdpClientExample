<Window x:Class="UdpServerExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdpServerExample"
        mc:Ignorable="d"
        Title="UdpServer" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="서버 → 클라이언트 메시지 전송" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <TextBox x:Name="txtMessage" Height="30" Margin="0 0 0 10"/>
            <Button Content="전송" Click="BtnSend_Click" Height="30"/>
            <ListBox x:Name="lstLogs" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
